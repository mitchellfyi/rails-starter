<div class="bg-white py-16 px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-4xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-6">
        <%= @page.title %>
      </h1>
      
      <% if @page.excerpt.present? %>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          <%= @page.excerpt %>
        </p>
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div class="prose prose-lg prose-blue">
        <%= @page.content %>
      </div>
      
      <div class="bg-gray-50 p-8 rounded-lg">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Get in Touch</h2>
        
        <!-- Contact Form -->
        <%= form_with url: "/contact", local: true, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :name, "Name", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, required: true,
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div>
            <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
            <%= form.email_field :email, required: true,
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div>
            <%= form.label :subject, "Subject", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :subject, required: true,
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div>
            <%= form.label :message, "Message", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :message, rows: 4, required: true,
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div>
            <%= form.submit "Send Message",
                class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>