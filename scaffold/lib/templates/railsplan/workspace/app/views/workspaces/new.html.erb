<% content_for :title, "Create Workspace" %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow-sm rounded-lg p-4 sm:p-6 border border-gray-200">
    <header class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Create New Workspace</h1>
      <p class="mt-2 text-sm text-gray-600">Set up a new workspace to collaborate with your team members.</p>
    </header>

    <%= form_with(model: @workspace, class: "space-y-6") do |form| %>
      <% if @workspace.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4" role="alert">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                There <%= @workspace.errors.count == 1 ? 'was an error' : 'were errors' %> with your submission:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @workspace.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="space-y-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            Workspace Name <span class="text-red-500">*</span>
          <% end %>
          <%= form.text_field :name, 
              required: true,
              class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm", 
              placeholder: "My Awesome Team" %>
          <p class="mt-1 text-xs text-gray-500">Choose a name that represents your team or project.</p>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, 
              rows: 4,
              class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm resize-none", 
              placeholder: "Describe your workspace's purpose and goals..." %>
          <p class="mt-1 text-xs text-gray-500">Optional: Provide a brief description to help team members understand the workspace purpose.</p>
        </div>
      </div>

      <div class="flex flex-col-reverse sm:flex-row sm:justify-end gap-3 pt-6 border-t border-gray-200">
        <%= link_to workspaces_path, class: "w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
          Cancel
        <% end %>
        <%= form.submit "Create Workspace", class: "w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>