<div class="mb-8">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @fallback_credential.name %></h1>
      <p class="text-gray-600 mt-2">Fallback AI credential details and usage statistics</p>
    </div>
    <div class="space-x-2">
      <%= link_to "Edit", edit_admin_fallback_ai_credential_path(@fallback_credential), 
                  class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      <%= link_to "Test Connection", admin_fallback_ai_credential_test_connection_path(@fallback_credential), 
                  method: :post, class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
      <%= link_to @fallback_credential.active? ? "Deactivate" : "Activate", 
                  admin_fallback_ai_credential_toggle_active_path(@fallback_credential), 
                  method: :patch,
                  class: @fallback_credential.active? ? "bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700" : "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700",
                  data: { confirm: "#{@fallback_credential.active? ? 'Deactivate' : 'Activate'} this credential?" } %>
      <%= link_to "← Back", admin_fallback_ai_credentials_path, class: "text-blue-600 hover:text-blue-800" %>
    </div>
  </div>
</div>

<!-- Status Banner -->
<% unless @fallback_credential.available? %>
  <div class="mb-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <i class="fas fa-exclamation-triangle text-yellow-400"></i>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-yellow-800">Credential Not Available</h3>
        <div class="mt-2 text-sm text-yellow-700">
          <% if @fallback_credential.expired? %>
            <p>This credential has expired.</p>
          <% elsif !@fallback_credential.within_usage_limit? %>
            <p>This credential has reached its usage limit.</p>
          <% elsif !@fallback_credential.within_daily_limit? %>
            <p>This credential has reached its daily limit.</p>
          <% elsif !@fallback_credential.active? %>
            <p>This credential is inactive.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Usage Statistics Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="text-2xl font-bold text-blue-600"><%= @usage_stats[:total_usage] %></div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-500">Total API Calls</p>
        <% if @fallback_credential.usage_limit %>
          <p class="text-xs text-gray-400">of <%= @fallback_credential.usage_limit %></p>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="text-2xl font-bold text-green-600"><%= @usage_stats[:daily_usage] %></div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-500">Today's Usage</p>
        <% if @fallback_credential.daily_limit %>
          <p class="text-xs text-gray-400">of <%= @fallback_credential.daily_limit %></p>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="text-2xl font-bold text-purple-600"><%= @usage_stats[:unique_users] %></div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-500">Total Users</p>
      </div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="text-2xl font-bold text-orange-600"><%= @usage_stats[:active_today] %></div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-500">Active Today</p>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Credential Details -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Credential Details</h3>
    </div>
    <div class="p-6">
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Provider</dt>
          <dd class="text-sm text-gray-900">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <%= @fallback_credential.ai_provider.name %>
            </span>
          </dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Model</dt>
          <dd class="text-sm text-gray-900"><%= @fallback_credential.preferred_model %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="text-sm text-gray-900">
            <% if @fallback_credential.active? %>
              <% if @fallback_credential.available? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Available
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  Limited
                </span>
              <% end %>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                Inactive
              </span>
            <% end %>
          </dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Priority</dt>
          <dd class="text-sm text-gray-900"><%= @fallback_credential.priority %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Daily Limit</dt>
          <dd class="text-sm text-gray-900"><%= @fallback_credential.daily_limit || "Unlimited" %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Total Limit</dt>
          <dd class="text-sm text-gray-900"><%= @fallback_credential.usage_limit || "Unlimited" %></dd>
        </div>
        
        <% if @fallback_credential.expires_at %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Expires At</dt>
            <dd class="text-sm text-gray-900"><%= @fallback_credential.expires_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
        <% end %>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Created By</dt>
          <dd class="text-sm text-gray-900"><%= @fallback_credential.created_by.email %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Last Used</dt>
          <dd class="text-sm text-gray-900">
            <%= @fallback_credential.last_used_at ? time_ago_in_words(@fallback_credential.last_used_at) + " ago" : "Never" %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Trial Configuration -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Trial Configuration</h3>
    </div>
    <div class="p-6">
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Enabled for Trials</dt>
          <dd class="text-sm text-gray-900">
            <%= @fallback_credential.enabled_for_trials? ? "Yes" : "No" %>
          </dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Show in Onboarding</dt>
          <dd class="text-sm text-gray-900">
            <%= @fallback_credential.enabled_for_onboarding? ? "Yes" : "No" %>
          </dd>
        </div>
        
        <% if @fallback_credential.onboarding_message.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Onboarding Message</dt>
            <dd class="text-sm text-gray-900 bg-gray-50 p-3 rounded">
              <%= simple_format(@fallback_credential.onboarding_message) %>
            </dd>
          </div>
        <% end %>
        
        <% if @fallback_credential.description.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="text-sm text-gray-900 bg-gray-50 p-3 rounded">
              <%= simple_format(@fallback_credential.description) %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>
</div>

<!-- Usage Chart -->
<% if @daily_usage_chart_data.any? %>
  <div class="mt-8 bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Daily Usage (Last 30 Days)</h3>
    </div>
    <div class="p-6">
      <div class="h-64 flex items-end space-x-1" style="max-height: 200px;">
        <% max_usage = @daily_usage_chart_data.values.max || 1 %>
        <% @daily_usage_chart_data.each do |date, usage| %>
          <div class="flex-1 bg-blue-500 rounded-t hover:bg-blue-600 transition-colors" 
               style="height: <%= (usage.to_f / max_usage * 180).round %>px; min-height: 2px;"
               title="<%= date %>: <%= usage %> calls">
          </div>
        <% end %>
      </div>
      <div class="mt-4 text-xs text-gray-500 flex justify-between">
        <span>30 days ago</span>
        <span>Today</span>
      </div>
    </div>
  </div>
<% end %>

<!-- Recent Usage -->
<div class="mt-8 bg-white shadow rounded-lg">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-lg font-medium text-gray-900">Recent Usage</h3>
  </div>
  <div class="overflow-hidden">
    <% if @recent_usage.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Workspace</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usage</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Used</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @recent_usage.each do |usage| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= usage.user.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= usage.workspace&.name || "N/A" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= usage.date.strftime("%m/%d/%Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= usage.usage_count %> calls
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= usage.last_used_at ? time_ago_in_words(usage.last_used_at) + " ago" : "N/A" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500">No usage recorded yet</p>
      </div>
    <% end %>
  </div>
</div>