<% content_for :title, "Invitation Expired" %>

<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
          <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        
        <h3 class="mt-4 text-lg font-medium text-gray-900">
          Invitation Expired
        </h3>
        
        <p class="mt-2 text-sm text-gray-500">
          This invitation to join <span class="font-medium"><%= @invitation.workspace.name %></span> has expired.
        </p>
        
        <p class="mt-4 text-sm text-gray-600">
          Please contact <span class="font-medium"><%= @invitation.invited_by.email %></span> for a new invitation.
        </p>
        
        <div class="mt-6">
          <%= link_to "Go to Sign In", new_user_session_path, 
                      class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>
  </div>
</div>