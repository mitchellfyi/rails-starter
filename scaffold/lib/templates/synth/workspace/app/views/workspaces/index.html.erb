<% content_for :title, "Workspaces" %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-900">My Workspaces</h1>
  <% if policy(Workspace).create? %>
    <%= link_to "Create Workspace", new_workspace_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>

<% if @workspaces.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @workspaces.each do |workspace| %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            <%= link_to workspace.name, workspace, class: "hover:text-blue-600" %>
          </h3>
          <% if workspace.description.present? %>
            <p class="mt-2 max-w-2xl text-sm text-gray-500">
              <%= workspace.description %>
            </p>
          <% end %>
          <div class="mt-3 flex items-center justify-between">
            <div class="flex items-center text-sm text-gray-500">
              <span><%= pluralize(workspace.members.count, 'member') %></span>
              <span class="mx-2">â€¢</span>
              <span class="capitalize"><%= current_user.workspace_role(workspace) %></span>
            </div>
            <% if policy(workspace).update? %>
              <%= link_to "Settings", edit_workspace_path(workspace), class: "text-blue-600 hover:text-blue-900 text-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center">
    <div class="mt-5">
      <h3 class="mt-2 text-sm font-medium text-gray-900">No workspaces</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new workspace.</p>
      <div class="mt-6">
        <%= link_to "Create Workspace", new_workspace_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    </div>
  </div>
<% end %>