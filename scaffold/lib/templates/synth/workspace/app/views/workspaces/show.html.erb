<% content_for :title, @workspace.name %>

<div class="flex flex-col lg:flex-row lg:justify-between lg:items-start gap-4 mb-6">
  <div class="min-w-0 flex-1">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 break-words"><%= @workspace.name %></h1>
    <% if @workspace.description.present? %>
      <p class="mt-2 text-base sm:text-lg text-gray-600 break-words"><%= @workspace.description %></p>
    <% end %>
  </div>
  <div class="flex flex-col sm:flex-row gap-3 lg:flex-shrink-0">
    <% if policy(@workspace).update? %>
      <%= link_to edit_workspace_path(@workspace), class: "inline-flex justify-center items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg shadow-sm transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        Settings
      <% end %>
    <% end %>
    <%= link_to workspace_memberships_path(@workspace), class: "inline-flex justify-center items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-sm transition-colors" do %>
      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
      </svg>
      Members
    <% end %>
  </div>
</div>

<div class="grid grid-cols-1 xl:grid-cols-3 gap-6">
  <!-- Main Content -->
  <main class="xl:col-span-2">
    <div class="bg-white shadow-sm rounded-lg p-4 sm:p-6 border border-gray-200">
      <h2 class="text-xl font-semibold mb-4">Welcome to <%= @workspace.name %></h2>
      <p class="text-gray-600 mb-6">
        You are a <span class="font-medium capitalize inline-flex items-center px-2.5 py-0.5 rounded-full text-xs bg-blue-100 text-blue-800"><%= @membership&.role %></span> of this workspace.
      </p>
      
      <!-- Add workspace-specific content here -->
      <section class="mt-6">
        <h3 class="text-lg font-medium text-gray-900 mb-3">Recent Activity</h3>
        <div class="bg-gray-50 rounded-lg p-4 text-center">
          <svg class="mx-auto w-12 h-12 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="text-gray-500">No recent activity to display.</p>
        </div>
      </section>

      <!-- Responsive Design Example -->
      <section class="mt-8">
        <h3 class="text-lg font-medium text-gray-900 mb-3">Responsive Design Examples</h3>
        <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
          <p class="text-sm text-blue-700 mb-3">
            This workspace demonstrates responsive design patterns used throughout the application.
          </p>
          <%= render 'shared/responsive_modal_example' %>
        </div>
      </section>
    </div>
  </main>

  <!-- Sidebar -->
  <aside class="space-y-6">
    <!-- Members Summary -->
    <div class="bg-white shadow-sm rounded-lg p-4 sm:p-6 border border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
        </svg>
        Team Members
      </h3>
      <div class="space-y-3">
        <% @members.limit(5).each do |membership| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center min-w-0 flex-1">
              <div class="flex-shrink-0">
                <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                  <span class="text-sm font-medium text-gray-700">
                    <%= membership.user.email.first.upcase %>
                  </span>
                </div>
              </div>
              <div class="ml-3 min-w-0 flex-1">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= membership.user.email %>
                </p>
              </div>
            </div>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 capitalize ml-2">
              <%= membership.role %>
            </span>
          </div>
        <% end %>
        
        <% if @members.count > 5 %>
          <div class="text-center pt-2 border-t border-gray-200">
            <%= link_to workspace_memberships_path(@workspace), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
              View all <%= @members.count %> members
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Pending Invitations -->
    <% if policy(@workspace).manage_members? && @pending_invitations.any? %>
      <div class="bg-white shadow-sm rounded-lg p-4 sm:p-6 border border-gray-200">
        <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
          Pending Invitations
        </h3>
        <div class="space-y-2">
          <% @pending_invitations.each do |invitation| %>
            <div class="flex items-center justify-between text-sm">
              <span class="text-gray-900 truncate flex-1 mr-2"><%= invitation.email %></span>
              <span class="text-gray-500 capitalize flex-shrink-0"><%= invitation.role %></span>
            </div>
          <% end %>
        </div>
        <%= link_to workspace_memberships_path(@workspace), class: "text-blue-600 hover:text-blue-800 text-sm font-medium block mt-3" do %>
          Manage invitations
        <% end %>
      </div>
    <% end %>
  </aside>
</div>