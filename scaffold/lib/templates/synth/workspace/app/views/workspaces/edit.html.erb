<% content_for :title, "Edit #{@workspace.name}" %>

<div class="max-w-md mx-auto bg-white shadow rounded-lg p-6">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Edit Workspace</h1>

  <%= form_with(model: @workspace, method: :patch, class: "space-y-6") do |form| %>
    <% if @workspace.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              There were some errors with your submission:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @workspace.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>

    <div class="flex justify-between">
      <div>
        <% if policy(@workspace).destroy? %>
          <%= link_to "Delete Workspace", @workspace, method: :delete, 
                      data: { confirm: "Are you sure? This action cannot be undone." },
                      class: "bg-red-600 hover:bg-red-700 focus:ring-red-500 text-white py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2" %>
        <% end %>
      </div>
      
      <div class="flex space-x-3">
        <%= link_to "Cancel", @workspace, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= form.submit "Update Workspace", class: "bg-blue-600 hover:bg-blue-700 focus:ring-blue-500 text-white py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2" %>
      </div>
    </div>
  <% end %>
</div>