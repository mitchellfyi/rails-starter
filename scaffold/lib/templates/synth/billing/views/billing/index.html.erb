<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">Billing Dashboard</h1>

  <% if @subscription %>
    <!-- Current Subscription -->
    <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">Current Subscription</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <p class="text-sm text-gray-600">Plan</p>
          <p class="font-medium"><%= @subscription.plan.name %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Status</p>
          <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full 
                     <%= @subscription.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @subscription.status.titleize %>
          </span>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Amount</p>
          <p class="font-medium">$<%= @subscription.plan.price_in_dollars %> / <%= @subscription.plan.interval %></p>
        </div>
        
        <% if @subscription.on_trial? %>
          <div>
            <p class="text-sm text-gray-600">Trial Ends</p>
            <p class="font-medium"><%= @subscription.trial_ends_at.strftime('%B %d, %Y') %></p>
            <p class="text-xs text-blue-600"><%= @subscription.trial_days_remaining %> days remaining</p>
          </div>
        <% end %>
        
        <% if @subscription.current_period_end %>
          <div>
            <p class="text-sm text-gray-600">Next Billing Date</p>
            <p class="font-medium"><%= @subscription.current_period_end.strftime('%B %d, %Y') %></p>
          </div>
        <% end %>
      </div>
      
      <div class="mt-6 flex space-x-4">
        <%= link_to 'Change Plan', billing_plans_path, class: 'btn btn-secondary' %>
        <%= link_to 'Cancel Subscription', billing_cancel_path, method: :delete, 
                    confirm: 'Are you sure you want to cancel your subscription?',
                    class: 'btn btn-outline-danger' %>
      </div>
    </div>
  <% else %>
    <!-- No Active Subscription -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold text-blue-900 mb-2">No Active Subscription</h2>
      <p class="text-blue-700 mb-4">Choose a plan to get started with all our features.</p>
      <%= link_to 'View Plans', billing_plans_path, class: 'btn btn-primary' %>
    </div>
  <% end %>

  <!-- Recent Invoices -->
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Recent Invoices</h2>
    
    <% if @invoices.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Invoice
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Date
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Amount
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Status
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @invoices.each do |invoice| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  #<%= invoice.number || invoice.id %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= invoice.created_at.strftime('%B %d, %Y') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  $<%= invoice.amount_in_dollars %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full 
                             <%= invoice.status == 'paid' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= invoice.status.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <% if invoice.status == 'paid' %>
                    <%= link_to 'Download PDF', download_invoice_path(invoice), 
                                class: 'text-blue-600 hover:text-blue-900' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500">No invoices yet.</p>
    <% end %>
  </div>
</div>