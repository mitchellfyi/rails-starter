<div class="card">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
    <h1 style="margin: 0; color: #1f2937;">Edit Feature Flag</h1>
    <%= link_to "← Back to Flags", admin_feature_flags_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="card">
  <%= form_with model: [:admin, @feature_flag], local: true do |f| %>
    <% if @feature_flag.errors.any? %>
      <div class="alert alert-danger">
        <h4>Please fix the following errors:</h4>
        <ul style="margin: 0;">
          <% @feature_flag.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, style: "display: block; margin-bottom: 0.5rem; font-weight: 500;" %>
      <%= f.text_field :name, class: "form-control", placeholder: "e.g. new_ui, beta_features" %>
    </div>

    <div class="form-group">
      <%= f.label :description, style: "display: block; margin-bottom: 0.5rem; font-weight: 500;" %>
      <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Describe what this feature flag controls..." %>
    </div>

    <div class="form-group">
      <%= f.label :enabled, style: "display: flex; align-items: center; gap: 0.5rem;" %>
      <%= f.check_box :enabled, style: "margin: 0;" %>
      <span>Enable this feature flag globally by default</span>
    </div>

    <div style="display: flex; gap: 0.5rem;">
      <%= f.submit "Update Feature Flag", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_feature_flag_path(@feature_flag), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>