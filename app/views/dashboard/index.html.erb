<%= render Railsplan::UI::SidebarLayoutComponent.new(
  title: "Dashboard",
  brand_name: "Rails SaaS",
  user: { name: "John Doe", avatar: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" }
) do %>
  
  <div class="px-4 sm:px-6 lg:px-8">
    <%= render Railsplan::UI::PageHeaderComponent.new(
      title: "Welcome back, John!",
      description: "Here's what's happening with your projects today."
    ) do %>
      <% content_for :page_actions do %>
        <%= render Railsplan::UI::ButtonComponent.new(variant: :outline) do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
          </svg>
          New Project
        <% end %>
      <% end %>
    <% end %>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <%= render Railsplan::UI::CardComponent.new(padding: :sm) do %>
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary-600 dark:bg-primary-500">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25H13.19l-2.12-2.12a1.5 1.5 0 0 0-1.061-.44Z" />
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Total Projects</p>
            <div class="flex items-baseline">
              <p class="text-2xl font-semibold text-gray-900 dark:text-gray-100">12</p>
              <p class="ml-2 flex items-baseline text-sm font-semibold text-success-600 dark:text-success-400">
                <svg class="h-4 w-4 flex-shrink-0 text-success-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 17a.75.75 0 01-.75-.75V5.612L5.29 9.77a.75.75 0 01-1.08-1.04l5.25-5.5a.75.75 0 011.08 0l5.25 5.5a.75.75 0 11-1.08 1.04L10.75 5.612V16.25A.75.75 0 0110 17z" clip-rule="evenodd" />
                </svg>
                <span class="sr-only">Increased by</span>
                2
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <%= render Railsplan::UI::CardComponent.new(padding: :sm) do %>
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-success-600">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Completed Tasks</p>
            <div class="flex items-baseline">
              <p class="text-2xl font-semibold text-gray-900 dark:text-gray-100">84</p>
              <p class="ml-2 flex items-baseline text-sm font-semibold text-success-600 dark:text-success-400">
                <svg class="h-4 w-4 flex-shrink-0 text-success-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 17a.75.75 0 01-.75-.75V5.612L5.29 9.77a.75.75 0 01-1.08-1.04l5.25-5.5a.75.75 0 011.08 0l5.25 5.5a.75.75 0 11-1.08 1.04L10.75 5.612V16.25A.75.75 0 0110 17z" clip-rule="evenodd" />
                </svg>
                <span class="sr-only">Increased by</span>
                12
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <%= render Railsplan::UI::CardComponent.new(padding: :sm) do %>
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-warning-500">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">In Progress</p>
            <div class="flex items-baseline">
              <p class="text-2xl font-semibold text-gray-900 dark:text-gray-100">23</p>
              <p class="ml-2 flex items-baseline text-sm font-semibold text-error-600 dark:text-error-400">
                <svg class="h-4 w-4 flex-shrink-0 text-error-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 3a.75.75 0 01.75.75v10.638l3.96-4.158a.75.75 0 111.08 1.04l-5.25 5.5a.75.75 0 01-1.08 0l-5.25-5.5a.75.75 0 111.08-1.04l3.96 4.158V3.75A.75.75 0 0110 3z" clip-rule="evenodd" />
                </svg>
                <span class="sr-only">Decreased by</span>
                3
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <%= render Railsplan::UI::CardComponent.new(padding: :sm) do %>
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-purple-600">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Team Members</p>
            <p class="text-2xl font-semibold text-gray-900 dark:text-gray-100">8</p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Quick Actions -->
    <%= render Railsplan::UI::CardComponent.new(
      title: "Quick Actions",
      description: "Common tasks and shortcuts for your workflow."
    ) do %>
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-6">
        <% [
          { icon: "folder", label: "New Project" },
          { icon: "users", label: "Invite Team" },
          { icon: "document", label: "Generate Report" },
          { icon: "cog", label: "Settings" }
        ].each do |action| %>
          <button type="button" class="group relative flex flex-col items-center justify-center rounded-lg border-2 border-dashed border-gray-300 dark:border-gray-600 p-6 text-center hover:border-gray-400 dark:hover:border-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800">
            <%= render "railsplan/ui/icon", name: action[:icon], class: "mx-auto h-8 w-8 text-gray-400 dark:text-gray-500 group-hover:text-gray-500 dark:group-hover:text-gray-400" %>
            <span class="mt-2 block text-sm font-medium text-gray-900 dark:text-gray-100"><%= action[:label] %></span>
          </button>
        <% end %>
      </div>
    <% end %>

    <!-- Recent Activity -->
    <%= render Railsplan::UI::CardComponent.new(
      title: "Recent Activity",
      description: "Latest updates from your projects and team."
    ) do %>
      <div class="flow-root">
        <ul role="list" class="-mb-8">
          <% [
            { name: "John Doe", action: "Completed \"User Authentication System\"", time: "2 hours ago", avatar: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" },
            { name: "Jane Smith", action: "Added new feature to Mobile App project", time: "4 hours ago", avatar: "https://images.unsplash.com/photo-1494790108755-2616b612b77c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" },
            { name: "Michael Wilson", action: "Created new project \"Dashboard Analytics\"", time: "1 day ago", avatar: "https://images.unsplash.com/photo-1519244703995-f4e0f30006d5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" }
          ].each_with_index do |activity, index| %>
            <li>
              <div class="relative <%= 'pb-8' unless index == 2 %>">
                <% unless index == 2 %>
                  <span class="absolute left-4 top-4 -ml-px h-full w-0.5 bg-gray-200 dark:bg-gray-700" aria-hidden="true"></span>
                <% end %>
                <div class="relative flex space-x-3">
                  <div>
                    <img class="h-8 w-8 rounded-full" src="<%= activity[:avatar] %>" alt="<%= activity[:name] %>">
                  </div>
                  <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                    <div>
                      <p class="text-sm text-gray-600 dark:text-gray-400">
                        <span class="font-medium text-gray-900 dark:text-gray-100"><%= activity[:name] %></span>
                        <%= activity[:action] %>
                      </p>
                    </div>
                    <div class="whitespace-nowrap text-right text-sm text-gray-500 dark:text-gray-400">
                      <%= activity[:time] %>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="mt-6 flex">
        <%= render Railsplan::UI::ButtonComponent.new(variant: :ghost, href: "#") do %>
          View all activity
          <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>

<% end %>