<!-- Model Detail Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @model['class_name'] %></h1>
      <p class="mt-2 text-gray-600"><%= @model['file'] %></p>
    </div>
    <div>
      <%= link_to railsplan_web.schema_path, class: "btn btn-secondary" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Schema
      <% end %>
    </div>
  </div>
</div>

<!-- Model Stats -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="stat-card">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Associations</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @associations.length %></p>
      </div>
    </div>
  </div>

  <div class="stat-card">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Validations</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @validations.length %></p>
      </div>
    </div>
  </div>

  <div class="stat-card">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Scopes</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @scopes.length %></p>
      </div>
    </div>
  </div>
</div>

<!-- Content Sections -->
<div class="space-y-8">
  <!-- Associations -->
  <% if @associations.any? %>
    <div class="card">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Associations</h2>
      <div class="space-y-3">
        <% @associations.each do |association| %>
          <div class="flex items-center justify-between p-3 border rounded-lg">
            <div>
              <div class="flex items-center space-x-2">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                  <%= association['type'] %>
                </span>
                <span class="font-medium text-gray-900"><%= association['name'] %></span>
              </div>
              <% if association['class_name'] %>
                <p class="text-sm text-gray-500 mt-1">â†’ <%= association['class_name'] %></p>
              <% end %>
            </div>
            <% if association['options'] %>
              <div class="text-xs text-gray-400">
                <%= association['options'] %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Validations -->
  <% if @validations.any? %>
    <div class="card">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Validations</h2>
      <div class="space-y-2">
        <% @validations.each do |validation| %>
          <div class="flex items-center justify-between p-3 border rounded-lg">
            <div>
              <span class="font-medium text-gray-900"><%= validation['field'] %></span>
            </div>
            <div class="text-sm text-gray-600">
              <%= validation['rules'] %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Scopes -->
  <% if @scopes.any? %>
    <div class="card">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Scopes</h2>
      <div class="space-y-2">
        <% @scopes.each do |scope| %>
          <div class="p-3 border rounded-lg">
            <div class="flex items-center justify-between mb-2">
              <span class="font-medium text-gray-900"><%= scope['name'] %></span>
            </div>
            <code class="text-sm text-gray-600 bg-gray-50 px-2 py-1 rounded">
              <%= scope['definition'] %>
            </code>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Empty state if no data -->
  <% if @associations.empty? && @validations.empty? && @scopes.empty? %>
    <div class="card text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Basic Model</h3>
      <p class="mt-1 text-sm text-gray-500">
        This model doesn't have associations, validations, or scopes defined yet.
      </p>
    </div>
  <% end %>
</div>