<!-- Schema Browser Header -->
<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Schema Browser</h1>
  <p class="mt-2 text-gray-600">Explore your Rails application's models, associations, and database structure</p>
</div>

<!-- Stats Overview -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="stat-card">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Models</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @table_count %></p>
      </div>
    </div>
  </div>

  <div class="stat-card">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Associations</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @association_count %></p>
      </div>
    </div>
  </div>

  <div class="stat-card">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Database</p>
        <p class="text-lg font-semibold text-gray-900"><%= @stats&.[](:db_adapter) || 'Unknown' %></p>
      </div>
    </div>
  </div>
</div>

<!-- Search -->
<div class="mb-6">
  <div class="relative">
    <input type="text" 
           id="schema-search" 
           placeholder="Search models, associations..." 
           class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center">
      <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
    </div>
  </div>
</div>

<!-- Models List -->
<div class="card">
  <h2 class="text-lg font-semibold text-gray-900 mb-6">Models</h2>
  
  <% if @models.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4" id="models-grid">
      <% @models.each do |model| %>
        <div class="border rounded-lg p-4 hover:bg-gray-50 cursor-pointer model-card" 
             data-model="<%= model['class_name'] %>">
          <%= link_to railsplan_web.schema_model_path(model['class_name']), class: "block" do %>
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-lg font-semibold text-gray-900"><%= model['class_name'] %></h3>
              <span class="text-xs text-gray-500">
                <%= (model['associations'] || []).length %> assoc
              </span>
            </div>
            
            <p class="text-sm text-gray-600 mb-3"><%= model['file'] %></p>
            
            <div class="flex space-x-3 text-xs text-gray-500">
              <span><%= (model['validations'] || []).length %> validations</span>
              <span><%= (model['scopes'] || []).length %> scopes</span>
            </div>
            
            <% if (model['associations'] || []).any? %>
              <div class="mt-3">
                <div class="flex flex-wrap gap-1">
                  <% (model['associations'] || []).first(3).each do |assoc| %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                      <%= assoc['type'] %>
                    </span>
                  <% end %>
                  <% if (model['associations'] || []).length > 3 %>
                    <span class="text-xs text-gray-500">+<%= (model['associations'] || []).length - 3 %> more</span>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No models found</h3>
      <p class="mt-1 text-sm text-gray-500">
        Run <code class="bg-gray-100 px-1 py-0.5 rounded">railsplan index</code> to extract your schema
      </p>
    </div>
  <% end %>
</div>

<!-- JavaScript for search functionality -->
<script>
document.getElementById('schema-search').addEventListener('input', function(e) {
  const query = e.target.value.toLowerCase();
  const cards = document.querySelectorAll('.model-card');
  
  cards.forEach(card => {
    const modelName = card.getAttribute('data-model').toLowerCase();
    const content = card.textContent.toLowerCase();
    
    if (query === '' || content.includes(query)) {
      card.style.display = 'block';
    } else {
      card.style.display = 'none';
    }
  });
});
</script>