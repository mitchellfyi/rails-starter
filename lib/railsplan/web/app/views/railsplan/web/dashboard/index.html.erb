<!-- Dashboard Header -->
<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">RailsPlan Dashboard</h1>
  <p class="mt-2 text-gray-600">AI-powered development interface for your Rails application</p>
</div>

<!-- System Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Ruby Version -->
  <div class="stat-card">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Ruby Version</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @stats[:ruby_version] %></p>
      </div>
    </div>
  </div>

  <!-- Rails Version -->
  <div class="stat-card">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Rails Version</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @stats[:rails_version] %></p>
      </div>
    </div>
  </div>

  <!-- Database -->
  <div class="stat-card">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Database</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @stats[:db_adapter] %></p>
      </div>
    </div>
  </div>

  <!-- Context Status -->
  <div class="stat-card">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-<%= @stats[:context_fresh] ? 'green' : 'yellow' %>-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-<%= @stats[:context_fresh] ? 'green' : 'yellow' %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <% if @stats[:context_fresh] %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            <% else %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            <% end %>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Context Status</p>
        <p class="text-lg font-semibold text-gray-900">
          <span class="status-<%= @stats[:context_fresh] ? 'online' : 'warning' %>">
            <%= @stats[:context_fresh] ? 'Fresh' : 'Stale' %>
          </span>
        </p>
        <% if @stats[:last_indexed] %>
          <p class="text-xs text-gray-500">Indexed <%= @stats[:last_indexed] %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Health Checks -->
<% if @health_checks.any? %>
  <div class="mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Health Checks</h2>
    <div class="space-y-3">
      <% @health_checks.each do |check| %>
        <div class="alert-<%= check[:type] %>">
          <div class="flex">
            <div class="flex-shrink-0">
              <% if check[:type] == 'warning' %>
                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              <% else %>
                <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
              <% end %>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium"><%= check[:title] %></h3>
              <p class="text-sm"><%= check[:description] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Quick Actions -->
  <div class="card">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
    <div class="space-y-3">
      <%= link_to railsplan_web.generate_path, class: "btn btn-primary w-full justify-center" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
        </svg>
        Generate Code with AI
      <% end %>
      
      <%= link_to railsplan_web.schema_path, class: "btn btn-secondary w-full justify-center" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
        Browse Schema
      <% end %>
      
      <%= link_to railsplan_web.doctor_path, class: "btn btn-secondary w-full justify-center" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Run Doctor
      <% end %>
      
      <%= link_to railsplan_web.chat_path, class: "btn btn-secondary w-full justify-center" do %>
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        AI Chat
      <% end %>
    </div>
  </div>

  <!-- Recent AI Prompts -->
  <div class="card">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Recent AI Prompts</h2>
    <% if @recent_prompts.any? %>
      <div class="space-y-3">
        <% @recent_prompts.first(5).each do |prompt| %>
          <div class="border rounded-lg p-3 hover:bg-gray-50">
            <p class="text-sm text-gray-600 truncate"><%= prompt['prompt'] %></p>
            <p class="text-xs text-gray-400 mt-1">
              <%= Time.parse(prompt['timestamp']).strftime('%B %d at %I:%M %p') %>
            </p>
          </div>
        <% end %>
      </div>
      <div class="mt-4">
        <%= link_to "View All Prompts", railsplan_web.prompts_path, class: "text-blue-600 hover:text-blue-500 text-sm" %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No prompts yet. Start using AI features to see your history here.</p>
    <% end %>
  </div>
</div>

<!-- Installed Modules -->
<div class="mt-8">
  <div class="card">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Detected Modules</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <% @modules.each do |mod| %>
        <div class="flex items-center space-x-3">
          <span class="status-<%= mod[:installed] ? 'online' : 'offline' %>">
            <%= mod[:installed] ? '✓' : '✗' %>
          </span>
          <span class="text-sm text-gray-700"><%= mod[:name] %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>