# Rails SaaS Starter Template Environment Configuration
# Copy this file to .env and update the values for your specific environment

# Database Configuration
DATABASE_URL=postgresql://localhost/rails_starter_development

# Redis Configuration (for caching, background jobs, Action Cable)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
RAILS_ENV=development
SECRET_KEY_BASE=your_secret_key_base_here

# Feature Flags
FEATURE_AI_ENABLED=true
FEATURE_BILLING_ENABLED=false
FEATURE_CMS_ENABLED=false
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_CACHING_ENABLED=true

# Email Configuration (for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTHENTICATION=
SMTP_ENABLE_STARTTLS_AUTO=false
FROM_EMAIL=noreply@example.com

# AI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Billing Configuration (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Security Configuration
DEVISE_SECRET_KEY=your_devise_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Performance and Monitoring
BULLET_ENABLED=true
RAILS_LOG_LEVEL=debug

# UI/UX Configuration
DEFAULT_THEME=light
ENABLE_DARK_MODE=true
ENABLE_TURBO_NATIVE=false

# Workspace Configuration
DEFAULT_WORKSPACE_PLAN=free
ENABLE_SUBDOMAIN_ROUTING=false
WORKSPACE_INVITATION_EXPIRES_IN=7